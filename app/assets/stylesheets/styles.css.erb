* {
	margin:0;
	padding:0;
}

html, body {
  height: 100%;
}

@font-face {
    font-family: 'bebas_neueregular';
    src: url('BebasNeue-webfont.eot');
    src: url('BebasNeue-webfont.eot?#iefix') format('embedded-opentype'),
         url('BebasNeue-webfont.woff') format('woff'),
         url('BebasNeue-webfont.ttf') format('truetype'),
         url('BebasNeue-webfont.svg#bebas_neueregular') format('svg');
    font-weight: normal;
    font-style: normal;
}

body {
    background-image: url(<%= asset_path 'fondobla.jpg' %>);
    font: 14px/24px 'Lato', sans-serif;
    font-size: 1em; 
    line-height: 1.4;

}

.main {
	width: 100%;
	background-color: #76CCC5;
	border-bottom: 6px solid #9AE8E1;
	padding: 0 10px;
}

.contenedor {
    width: 99%;
    margin: 0 auto;
}

a {
    text-decoration: none;
}

li {
    list-style: none;
}

nav {
    font-family: 'bebas_neueregular', sans-serif;
    text-transform: uppercase;
    font-size: 1em;
    letter-spacing: 1.2px;
    float: right;
    margin-right: 30px;
}

nav li {
    float: left;
}

nav li a {
    display: block;
    color: #30302e;
    padding: 40px 15px 15px;
}

nav li a.current {
    background: #fff;
    color: #FFC717;
}

nav a:hover,
nav a:active {
    background: #fff;
    color: #FFC717;
}

.lbabimg {
    padding:0 0 5px 55px;
    margin-top: 15px;
    margin-left: 30px;
    float: left;
    background: url(<%= asset_path 'logolbab.png' %>) no-repeat;
    font-family: 'bebas_neueregular', sans-serif;
    text-transform: uppercase;
    font-size: 1.04em;
    color: #fff;
    letter-spacing: 1.6px;
    line-height: 1;
}

footer {
    width: 100%;
    height: 82px;
    background: url(<%= asset_path 'fondo4.png' %>);
    border-top: 1px dashed #76CCC5;
    padding: 0 10px;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 20;
}

.fixfooter {
    margin-bottom: 85px !important;
}

footer nav {
    font-size: 0.87em;
    letter-spacing: 1.2px;
    float: right;
    margin-right: 30px;
}

footer nav li a {
    display: block;
    text-decoration: none;
    color: #fff;
    padding:0px 10px !important;
    line-height: 1;
}

footer nav li a.current {
    background: none;
    color: #5D5D5D;
}

footer nav a:hover,
footer nav a:active {
    background: none;
    color: #5D5D5D;
}

.faq a {
    text-decoration: none;
    color: #919191;
    padding:0px 10px;
    line-height: 2;
    float: right;
}

.faq a:hover,
.faq a:active {
    color: #00A1AD;
}

.lbabfooter { 
    text-align: left;
    margin-top: 10px;
    margin-left: 30px;
}

.lbabfooter img {
    padding-right: 10px;
    border-right: 1px solid #5D5D5D;
    float: left;
}
.textft {
    margin-left: 10px;
    float: left;
}
.lbabfooter h1, .lbabfooter p {
    font-family: 'lato', sans-serif;
    font-size: 0.7em;
    color: #5D5D5D;
    letter-spacing: 1.1px;
    line-height: 1.1;
}

.lbabfooter h1 {
    font-weight: 600;
    color: #3d3d3d;
}

.lbabfooter h1 strong {
    color: #008D96;
}

.alert {
    padding: 5px;
    font-size: 12px;
    background-color: #E88B14;
    position: absolute;
    top: 100px;
    left: 50px;
    color:#fff;
    z-index:100;
    border-bottom: 3px solid #F9A848;
}


/* Media */

/* Smartphones (landscape) ----------- */
@media only screen and (min-width : 321px) {

    .contenedor {
        width: 98%;
    }
/* Styles */
}

@media only screen and (max-width : 631px) {
    .lbabimg {
        clear:both;
        margin-bottom: 10px;
    }

}

@media only screen and (min-width : 768px) {
/* Styles */
}

@media only screen and (min-width : 1024px) {

    .contenedor {
        width: 1000px;
    }

}

/* iPads (portrait) ----------- */
@media only screen and (min-device-width : 768px) and (max-device-width : 1024px) and (orientation : portrait) {

}

/* Desktops and laptops ----------- */
@media only screen and (min-width : 1224px) {
    
    .contenedor {
        width: 1200px;
    }

}

/* Large screens ----------- */
@media only screen and (min-width : 1824px) {
    
    .contenedor {
        width: 1400px;
    }

}

/* iPhone 4 ----------- */
@media only screen and (-webkit-min-device-pixel-ratio : 1.5), only screen and (min-device-pixel-ratio : 1.5) {
/* Styles */
}

/* clases de ayuda */

.clearfix:before,
.clearfix:after {
    content: " ";
    display: table;
}

.clearfix:after {
    clear: both;
}

.clearfix {
    *zoom: 1;
}

.nofl {
    float: none;
}
