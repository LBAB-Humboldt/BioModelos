* {
	margin:0;
	padding:0;
}

html, body {
  height: 100%;
}

@font-face {
    font-family: 'bebas_neueregular';
    src: url('BebasNeue-webfont.eot');
    src: url('BebasNeue-webfont.eot?#iefix') format('embedded-opentype'),
         url('BebasNeue-webfont.woff') format('woff'),
         url('BebasNeue-webfont.ttf') format('truetype'),
         url('BebasNeue-webfont.svg#bebas_neueregular') format('svg');
    font-weight: normal;
    font-style: normal;
}

body {
    background-image: url(<%= asset_path 'fondobla.jpg' %>);
    font: 14px/24px 'Lato', sans-serif;
    font-size: 1em; 
    line-height: 1.4;
}

.main {
	width: 100%;
    background: url(<%= asset_path 'fondo4.png' %>);
	border-bottom: 6px solid #e7cb7f;
}

.contenedor {
    width: 99%;
    margin: 0 auto;
}

a {
    text-decoration: none;
}

li {
    list-style: none;
}

header {
    position: relative;
    top:0;
    z-index: 1;
}

nav {
    font-family: 'bebas_neueregular', sans-serif;
    text-transform: uppercase;
    font-size: 1em;
    letter-spacing: 1.2px;
    float: right;
    margin-right: 30px;
}

nav li {
    float: left;
}

nav li a {
    display: block;
    color: #30302e;
    padding: 40px 15px 18px;
}

nav li a.current {
    background: #fff;
    color: #FFC717;
}

nav a:hover,
nav a:active {
    background: #fff;
    color: #FFC717;
}

.betaimg {
    position: absolute;
    right:0;
    top: 0;
}

.humbimg {
    padding-top: 5px;
    margin-top: 7px;
    margin-left: 5px;
    float: left;
    font-family: 'lato', sans-serif;
    font-size: 13px;
    color: #4d4d4d;
    letter-spacing: 1.5px;
    line-height: 1.2;
}

.humbimg p {
    margin-top: 15px;
    float: left;
    font-family: 'lato', sans-serif;
    font-size: 11px;
    color: #5d5d5d;
    letter-spacing: 1px;
    line-height: 1;
}

.humbcolor {
    float: left;
    margin-top: 5px;
    margin-left: 30px;
}

footer {
    width: 100%;
    height: 44px;
    background-color: #655f57;
    border-top: 1px dashed #fff;
    padding: 0 10px;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 20;
}

.fixfooter {
    margin-bottom: 47px !important;
}

footer nav {
    font-size: 0.87em;
    letter-spacing: 1.2px;
    float: right;
    margin-right: 30px;
}

footer nav li a {
    display: block;
    text-decoration: none;
    color: #9d9d9d;
    padding:0px 10px !important;
    line-height: 1;
}

footer nav li a.current {
    background: none;
    color: #fff;
}

footer nav a:hover,
footer nav a:active {
    background: none;
    color: #fff;
}

.faq {
    float: right;
}

.faq a {
    text-decoration: none;
    color: #919191;
    padding:0px 10px;
}

.faq a:hover,
.faq a:active {
    color: #00A1AD;
}

.lbabfooter { 
    text-align: left;
    margin-top: 10px;
    margin-left: 15px;
}

.lbabfooter img {
    padding-right: 10px;
    border-right: 1px solid #5D5D5D;
    float: left;
}

.textft {
    float: left;
}
.lbabfooter h1, .lbabfooter p, .contacto p {
    font-family: 'lato', sans-serif;
    font-size: 0.7em;
    color: #1d1d1d;
    letter-spacing: 1.1px;
    line-height: 1.1;
}

.lbabfooter h1 {
    font-weight: 600;
    color: black;
}

.lbabfooter h1 strong {
    color: #f8fafb;
}

.lbabfooter a, .contacto a {
    text-decoration: none;
    color: black;
}

.alert {
    padding: 5px;
    font-size: 12px;
    background-color: #e48413;
    position: absolute;
    top: 100px;
    left: 50px;
    color:#fff;
    z-index:100;
    border-bottom: 3px solid #F9A848;
}

.termbox {
    display: none;
    position: absolute;
    top:15%;
    left: 10%;
    width: 500px;
    padding: 15px;
    background-color: #8ca816;
}

.terminos {
    width: 500px;
    font-size: 13px;
    background-image: url(<%= asset_path 'fondobla.jpg' %>);
}

.terminos h1 {
    letter-spacing: 2px;
    font-family: 'bebas_neueregular';
    display: inline-block;
    background-color: #8ca816;
    color: #fff;
    font-size: 16px;
    padding: 5px;
}

.terminos p {
    padding: 7px;
    color: #4d4d4d;
}

.terminos br {
    margin-bottom: 5px;
}

.terminos input[type="checkbox"] {
    display:inline-block;
    width:15px;
    height:15px;
    margin-left: 10px;
    vertical-align: baseline;
}

.terminos label {
    color: #1AB0B5;
    font-size: 12px;
}

.cancterm {
    padding: 3px 5px;
    background-color: #fff;
    display: inline-block;
    font-weight: bold;
    float: right;
    margin-right: 7px;
}

/* Media */

/* Smartphones (landscape) ----------- */
@media only screen and (min-width : 321px) {

    .contenedor {
        width: 98%;
    }
/* Styles */
}

@media only screen and (max-width : 631px) {
    .lbabimg {
        clear:both;
        margin-bottom: 10px;
    }

}

@media only screen and (min-width : 768px) {
/* Styles */
}

@media only screen and (min-width : 1024px) {

    .contenedor {
        width: 1000px;
    }

}

/* iPads (portrait) ----------- */
@media only screen and (min-device-width : 768px) and (max-device-width : 1024px) and (orientation : portrait) {

}

/* Desktops and laptops ----------- */
@media only screen and (min-width : 1224px) {
    
    .contenedor {
        width: 1200px;
    }

}

/* Large screens ----------- */
@media only screen and (min-width : 1824px) {
    
    .contenedor {
        width: 1400px;
    }

}

/* iPhone 4 ----------- */
@media only screen and (-webkit-min-device-pixel-ratio : 1.5), only screen and (min-device-pixel-ratio : 1.5) {
/* Styles */
}

/* clases de ayuda */

.clearfix:before,
.clearfix:after {
    content: " ";
    display: table;
}

.clearfix:after {
    clear: both;
}

.clearfix {
    *zoom: 1;
}

.nofl {
    float: none;
}

.invisible {
    display: none;
    visibility: hidden;
}
