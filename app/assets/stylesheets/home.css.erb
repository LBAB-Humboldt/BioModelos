.homeline {
	width: 100%;
	height: 220px;
	background-color: #E3AF20;
	background-image: url(<%= asset_path 'birdie.png' %>);
	background-repeat: no-repeat;
	background-position: center bottom;
	margin-top: 15px;
	z-index: -1;
	padding: 20px 0;
}

.homeline h1 {
	font-size: 60px;
	font-weight: 700;
	padding: 20px 0 0 20px;
	color: #fff;
	letter-spacing: 1px;
}

.homeline h2 {
    font-size: 18px;
    margin-top: -15px;
    padding-left: 22px;
    font-weight: 700;
    color: #ff5817;
    letter-spacing: 1px;
}

.hlcol1 {
	float: left;
	width: 360px;
	margin-right: 30px;
}

.intro2 {
	margin-top: -20px;
	max-height: 260px;
	height: 260px;
    max-width: 380px;
    width: 380px;
    margin-right: 40px;
	float: right;
    position: relative;
    background-image: url(<%= asset_path 'fondobla.jpg' %>);
}

.introtext {
	padding: 20px;
	margin:0 auto;
	font-size: 16px;
    color: #2d2d2d;
    font-weight: 700 !important;
    line-height: 1.1;
    letter-spacing: .3px;
}

.introtext strong {
    color: #e55a2f;
}

.introtext h5 {
	width: 48%;
	display: inline-block;
	float: left;
	margin-bottom: 20px;
}

.introtext h5:last-child {
	float: right;
}

.lbabimg2 {
    padding: 55px 0 10px;
    background: url(<%= asset_path 'logolbab.png' %>) no-repeat;
	margin: 10px 0 0 20px;
}

.columnaintro {
	display: inline-block;
	width: 40%;
	padding: 0 2% 20px;
}

.activity2 {
    border: 1px solid #FFC72D;
    border-bottom: 5px solid #FAE49B;
    padding: 0 10px 5px;
    overflow: scroll;
    height: 250px;
}

.activity2 h5 {
    display: inline-block;
	font-family: 'bebas_neueregular', sans-serif;
    font-size: 1em;
    font-weight: 400;
    color: #fff;
    letter-spacing: 1px;
    padding: 3px 10px;
    background-color: #FFC72D;
}


.usu {
	background-image: url(<%= asset_path 'ususarioop.png' %>);
}

.exp {
	background-image: url(<%= asset_path 'expertoop.png' %>);
	padding-left: 42px !important;
}

.op h2 {
	font-size: 30px;
	color:#FAC205;
	text-align: left;
	float: left;
	margin-bottom: -30px;
	z-index: 3;
	position: relative;
}

.op p {
	text-align: center;
	font-size: 20px;
	color: #E3AF20;
	font-weight: 400;
	text-transform: uppercase;
}

.fondoinicio img {
	width: 100%;
	z-index: 2;
	position: relative;
}

.hide {
    display: none;
}

.minus1024 {
	width: 100%;
	height: 100%;
	background-image: url(<%= asset_path 'fondobla.jpg' %>);
	position: absolute;
	z-index: 10000;
}

.minus1024 img {
	width: 98%;
	margin: auto;
}

/* if screen size gets wider than 1024 */

@media screen and (min-width:1024px) {

    .minus1024 {
	display:none;
}
}
