.maincol{
    width: 225px;
    padding-right: 25px;
    margin:20px 20px 20px 40px;
    border-right: 1px dashed #76CCC5;
    float: left;
}

.BioM {
    width: 205px;
    border: 1px solid #008D96;
    border-bottom: 5px solid #008D96;
    padding: 10px;
    line-height: 1;
    margin-bottom: 5px;
}

.BioM h1 {
    color: #5D5D5D;
    font-size: 20px !important;
    width: 700px;
}

.BioM p {
    font-size: 12px;
    font-weight: 700;
    color: #008D96;
}

.intro {
    padding: 5px;
    font-size: 12px;
    color: #5D5D5D;
    font-weight: 700 !important;
}

.intro strong {
    color: #008D96;
}

.intro h5 {
    font-size: 11px;
    line-height: 1.2;
    letter-spacing: .3px;
}

.activity {
    width: 205px;
    border: 1px solid #FFC72D;
    border-bottom: 5px solid #FAE49B;
    padding: 0 10px 10px;
    margin: 10px 0 5px;
}

.activity h5 {
    display: inline-block;
	font-family: 'bebas_neueregular', sans-serif;
    font-size: 1em;
    font-weight: 400;
    color: #fff;
    letter-spacing: 1px;
    padding: 5px 10px;
    background-color: #FFC72D;
}

.minavatar {
	float: left;
	margin-right: 5px;
}

.feeduser {
	font-size: 11px;
	line-height: 2;
	color: #E88B14;
}

.feedtime {
	font-size: 10px;
	color: #878787;
	line-height: 0;
}

.feedcontent {
	float: none;
	font-size: 11px;
	color: #3D3D3D;
	line-height: 1;
}

.actfeed {
	padding: 5px 0;
	border-bottom: 1px dashed #FAC205;
}

.op {
	float:left;
	width: 22%;
	display: block;
	margin-left: 10%;
}

.imginicio img {
	width: 100%;
	z-index: 2;
	position: relative;
}

.opciones {
	padding: 20px;
	overflow: auto;
}

.lineop {
	overflow: auto;
	padding: 7px;
	border-top: 1px dashed #76CCC5;
	border-bottom: 1px dashed #76CCC5;
	text-align: center;
}

.lineop h3 {
	font-family: 'bebas_neueregular', sans-serif;
	font-weight: 400;
	letter-spacing: 1.2px;
	color: #C17828;
	display: inline-block;
	padding: 3px 25px;
	font-size: 16px;
	background-repeat: no-repeat; 
	background-position: left;
}

.usu {
	background-image: url(<%= asset_path 'bdot.png' %>);
}

.exp {
	background-image: url(<%= asset_path 'obdot.png' %>);
	padding-left: 32px !important;
}

.op h2 {
	font-size: 30px;
	color:#FAC205;
	text-align: left;
	float: left;
	margin-bottom: -30px;
	z-index: 3;
	position: relative;
}

.op p {
	text-align: center;
	font-size: 11px;
	color: #008D96;
	margin-top: 5px;
}
