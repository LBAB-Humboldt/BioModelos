.maincol{
    width: 225px;
    padding-right: 25px;
    margin:20px 20px 20px 40px;
    border-right: 1px dashed #1ab0b5;
    float: left;
}

.lbabimg {
    padding:0 0 5px 55px;
    background: url(<%= asset_path 'logolbab.png' %>) no-repeat;
    font-family: 'bebas_neueregular', sans-serif;
    text-transform: uppercase;
    font-size: 1.04em;
    color: #008d96;
    letter-spacing: 1.6px;
    line-height: 1;
}

.BioM {
    width: 205px;
    border: 1px solid #1ab0b5;
    border-bottom: 5px solid #1ab0b5;
    padding: 10px;
    line-height: 1;
    margin-bottom: 5px;
}

.BioM h1 {
    color: #3d3d3d;
    font-size: 25px !important;
    width: 700px;
    margin-bottom: 3px;
}

.BioM p {
    font-size: 12px;
    font-weight: 700;
    color: #ff7742;
}

.intro {
    padding: 5px;
    font-size: 12px;
    color: #5D5D5D;
    font-weight: 700 !important;
}

.intro strong {
    color: #008D96;
}

.intro h5 {
    font-size: 11px;
    line-height: 1.2;
    letter-spacing: .3px;
}

.activity {
    width: 205px;
    border: 1px solid #FFC72D;
    border-bottom: 5px solid #FAE49B;
    padding: 0 10px 10px;
    margin: 10px 0 5px;
}

.activity h5 {
    display: inline-block;
	font-family: 'bebas_neueregular', sans-serif;
    font-size: 1em;
    font-weight: 400;
    color: #fff;
    letter-spacing: 1px;
    padding: 5px 10px;
    background-color: #FFC72D;
}

.minavatar {
	float: left;
	margin-right: 5px;
	margin-top: 10px;
}

.feeduser {
	font-size: 11px;
	line-height: 3;
	color: #e48413;
}

.feedtime {
	font-size: 10px;
	color: #878787;
	line-height: 0;
}

.feedcontent {
	float: none;
	font-size: 11px;
	color: #3D3D3D;
	line-height: 1;
}

.actfeed {
	padding: 3px 0;
	border-bottom: 1px dashed #FAC205;
}

.op {
	float:left;
	width: 21%;
	display: block;
	margin: 0 6%;
}

.imginicio img {
	width: 100%;
	z-index: 2;
	position: relative;
}

.opciones {
	padding: 10px;
	overflow: auto;
}

.lineop {
	overflow: auto;
	padding: 3px;
	border-top: 1px dashed #1ab0b5;
	border-bottom: 1px dashed #1ab0b5;
	text-align: center;
	margin:15px 0 20px;
}

.lineop h3 {
	font-family: 'bebas_neueregular', sans-serif;
	font-weight: 400;
	letter-spacing: 1.2px;
	color: #ff7742;
	display: inline-block;
	padding: 5px 25px;
	font-size: 16px;
	background-repeat: no-repeat; 
	background-position: left;
}

.fondomaps {
	width: 100%;
	height: 100%;
	background-image: url(<%= asset_path 'mapsmaps.png' %>);
	-webkit-background-size: cover;
	background-size: cover;
	position:absolute;
	z-index: -2;
	opacity: 0.3;
	filter: alpha(opacity=30);
}

.homeline {
	width: 100%;
	height: 220px;
	background-color: #E3AF20;
	background-image: url(<%= asset_path 'birdie.png' %>);
	background-repeat: no-repeat;
	background-position: center bottom;
	margin-top: 15px;
	z-index: -1;
	padding: 20px 25px;
}

.homeline h1 {
	font-size: 60px;
	font-weight: 700;
	padding: 20px 0 0 20px;
	color: #fff;
	letter-spacing: 1px;
}

.homeline h2 {
    font-size: 18px;
    margin-top: -15px;
    padding-left: 22px;
    font-weight: 700;
    color: #ff5817;
    letter-spacing: 1px;
}

.hlcol1 {
	width: 360px;
	margin-right: 30px;
}

.intro2 {
	margin-top: 20px;
    font-size: 14px;
    color: #2d2d2d;
    font-weight: 700 !important;
    line-height: 1.2;
    letter-spacing: .3px;
}

.intro2 strong {
    color: #008D96;
}

.lbabimg2 {
    padding: 55px;
    background: url(<%= asset_path 'logolbab.png' %>) no-repeat;
	margin: 10px 0 0 20px;
}

.columnaintro {
	width: 40%;
	padding: 0 2%;
	float: left;
}

.activity2 {
    margin-top:20px;
    border: 1px solid #FFC72D;
    border-bottom: 5px solid #FAE49B;
    padding: 0 10px 10px;
    overflow: scroll;
    height: 200px;
}

.activity2 h5 {
    display: inline-block;
	font-family: 'bebas_neueregular', sans-serif;
    font-size: 1em;
    font-weight: 400;
    color: #fff;
    letter-spacing: 1px;
    padding: 3px 10px;
    background-color: #FFC72D;
}


.usu {
	background-image: url(<%= asset_path 'ususarioop.png' %>);
}

.exp {
	background-image: url(<%= asset_path 'expertoop.png' %>);
	padding-left: 42px !important;
}

.op h2 {
	font-size: 30px;
	color:#FAC205;
	text-align: left;
	float: left;
	margin-bottom: -30px;
	z-index: 3;
	position: relative;
}

.op p {
	text-align: center;
	font-size: 11px;
	color: #1ab0b5;
	margin-top: 5px;
}
