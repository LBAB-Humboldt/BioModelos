.minavatar {
	float: left;
	margin-right: 5px;
	margin-top: 10px;
}

.feeduser {
	font-size: 11px;
	line-height: 3;
	color: #e48413;
}

.feedtime {
	font-size: 10px;
	color: #878787;
	line-height: 0;
}

.feedcontent {
	float: none;
	font-size: 11px;
	color: #3D3D3D;
	line-height: 1;
}

.actfeed {
	padding: 3px 0;
	border-bottom: 1px dashed #FAC205;
}

.actfeed:last-child {
	margin-bottom: 10px;
}

.op {
	float:left;
	width: 19%;
	display: block;
	margin: 0 3%;
	height: auto;
}

.imginicio {
	background: no-repeat center;
	-webkit-background-size: cover;
	background-size: cover;
	width: 120px;
	height: 120px;
	z-index: 2;
	position: relative;
	margin: 10px auto;
}

.op1 {
	background: url(<%= asset_path 'op1.png' %>);
}

.op2 {
	background: url(<%= asset_path 'op2.png' %>);
}

.op3 {
	background: url(<%= asset_path 'op3.png' %>);
}

.op4 {
	background: url(<%= asset_path 'op4.png' %>);
}

.opciones {
	width: 100%;
	background: url(<%= asset_path 'bg.jpg' %>);
	padding: 45px 0;
	display: inline-block;
	text-align: center;
}

.fondoinicio h1 {
	font-size: 20px;
	letter-spacing: 2px;
	color: #fff;
	font-weight: 200;
	margin-top: 20px;
}

.fondoinicio h6 {
	font-size: 15px;
	text-transform: none;
	color: #888888;
	font-weight: 400;
	margin-top: 10px;
	letter-spacing: 1px;
}

