.formalogin {
  background-color: #FAC205;
  font-size: 12px;
  width: 200px;
  height: auto;
  padding: 30px 18px 10px 15px;
  border-bottom: 5px solid #FAE49B;
  background-image: url(<%= asset_path 'arroww.png' %>);
  background-repeat: no-repeat;
  background-position: 190px top;
  float: right;
  margin-right: 130px;
}

.formasignin {
	background-color: #FAC205;
	font-size: 12px;
	width: 270px;
	height: auto;
	padding: 30px 18px 10px 15px;
	border-bottom: 5px solid #FAE49B;
  background-image: url(<%= asset_path 'arroww.png' %>);
  background-repeat: no-repeat;
  background-position: 250px top;
  float: right;
  margin-right: 30px;
}

.bbton {
	padding: 1px 10px;
	background-color: #1ab0b5;
	color:#fff;
	font-family: 'bebas_neueregular', sans-serif;
  text-transform: uppercase;
  font-size: 1.2em;
  letter-spacing: 2px;
  border:none;
  float: right;
  cursor:pointer;
}

.inputforma {
	width: 190px;
	margin-bottom: 10px;
	border:none;
	padding: 3px;
	border-right: 5px solid #FAE49B;
  font-family: 'Lato', sans-serif !important;
  color: #414243;
  font-style: italic;
  font-size: 12px;
  letter-spacing: 1px;
}

.inp2 {
  width: 260px;
}

.formasignin p {
  line-height: 1;
  font-size: 11px;
  color:#fff;
  list-style: 1;
  margin-bottom: 15px;
}

.checkbox {
	float: left;
  vertical-align: middle;
  font-size: 11px;
  color:#fff;
  letter-spacing: .8px;
  margin-top: 3px;
  margin-right: 5px;
}

.avatarlink {
  float: left;
  font-size: 11px;
  text-transform: uppercase;
  text-decoration: none;
  font-weight: 700;
  color:#008D96;
  letter-spacing: .3px;
  margin-top: 3px;
  margin-right: 5px;
}

.linkss {
  text-decoration: none;
  color:#008D96;
  font-size: 10px;
  display: inline-block;
  margin: 5px 10px 0;
  text-align: center;
}

.inglink {
  margin-left: 0;
}

.nobgimg {
  padding-top: 5px;
  background-image: none;
}

.fondo1 {
  width: 100%;
  height: 100%;
  background-image: url(<%= asset_path 'ranaf1.jpg' %>);
  background-repeat: no-repeat;
  background-size: cover;
}

.fondo2 {
  width: 100%;
  height: 100%;
  background-image: url(<%= asset_path 'ranaf2.jpg' %>);
  background-repeat: no-repeat;
  background-size: cover;
}

.fondo3 {
  width: 100%;
  height: -moz-calc(100% - 166px);
  height: -webkit-calc(100% - 166px);
  height: calc(100% - 166px);
  background-image: url(<%= asset_path 'plumas.jpg' %>);
  background-repeat: no-repeat;
  background-size: cover;
}

.faqshow {
  width: 350px;
  height: -moz-calc(100% - 30px);
  height: -webkit-calc(100% - 30px);
  height: calc(100% - 30px);
  float: right;
  margin-right: 50px;
  background-image: url(<%= asset_path 'fondobla.jpg' %>);
  padding: 15px;
  overflow: scroll;
}

.faqtitle h1 {
  background-color: #f3523d;
  padding: 0 5px;
  display: inline-block;
  font-family: 'bebas_neueregular', sans-serif;
  font-size: 40px;
  letter-spacing: 3px;
  line-height: 1;
  color: #fff;
  margin-bottom: 10px;
}

.faqtitle h2 {
  display: inline-block;
  font-size: 18px;
  color:#f3523d;
  font-family: 'bebas_neueregular', sans-serif;
  letter-spacing: 1px;
  line-height: 1;
}

.faqtitle {
  border-bottom: 1px dashed #f3523d;
}

.qya {
  margin:10px 0;
  font-size: 12px;
  color:#5d5d5d;
}

.qya h3 {
  color:#1ab0b5;
  font-weight: 700;
}
