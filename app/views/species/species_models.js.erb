<% if !@species.blank? %>
	$('.areaespecie, .sp_ecovar').html('<%=j @species.sci_name %>')
	$('.selectores,.cajabusqueda').hide('slow');
	$('.showmodels, .areaespecie').show('slow');
	$('.botonmodelos, .ecologicas, .edicionbar').show('slow');
	$('.showmodels').html('<%=j render partial: 'species/species_models', locals: { :species => @species } %>');
	$('.botonmodelos').addClass("w55");
	$(".findbar").removeClass("w55");
	if($("#species_id").val() == '')
		$("#species_id").val(<%= @species.id %>);
	<% if !@species.ocurrence_records_url.blank? %>
		_mapVisorModule.loadPoints('/registros/' + '<%= @species.ocurrence_records_url %>');
	<% end %>
<% else %>
	$('.resultados').html('No se encontraron resultados');
<% end %>

