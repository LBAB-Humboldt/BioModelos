<%= form_tag({:controller => :species, :action => :species_content}, {:method => :get, :remote => true})  do %>
  <%= text_field_tag :query, '', :id => 'search_field', :placeholder => 'Ingrese nombre de la especie', :collection => 'get_species_name', :include_blank => false, :rel => 'autocomplete' %>
  <%= hidden_field_tag 'species_id' %> 
  <%= submit_tag '', :name => nil, :class => 'searchbtn' %>
<% end %>

