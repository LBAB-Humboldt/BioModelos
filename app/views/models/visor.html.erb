<script>
//Initialize each
$(".slider").each(function () {
  $(this).slider({
      min: 0.0,
      max: 1.0, 
      step: 0.1,
      values: [ 0.0, 0.5, 1.0 ],
   });
});

$('input[type=checkbox]').each(function(e){
  var $this = $(this);
  $this.click(function(e){
      $this.parent('div').find('div.slider').toggle('slow');
      $this.parent('div').find('h6').toggle('slow');
  });
});

$( ".ecobtn" ).click(function(e) {
